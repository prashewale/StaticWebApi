  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="iluvadev.ConsoleProgressBar" Version="1.1.0" />
    <PackageReference Include="Microsoft.EntityFrameworkCore.Design" Version="8.0.5">
      <PrivateAssets>all</PrivateAssets>
