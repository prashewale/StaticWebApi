    </PackageReference>
    <PackageReference Include="Microsoft.Extensions.Hosting" Version="8.0.0" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Core\Static.Services\Static.Services\Static.Services.csproj" />
  </ItemGroup>
</Project>
